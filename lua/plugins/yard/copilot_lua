return{
  "zbirenbaum/copilot.lua",
    cmd = "Copilot",
    opts = {
      filetypes = {
        markdown = true,
        sh = function()
          if string.match(vim.fs.basename(vim.api.nvim_buf_get_name(0)), "^%.env.*") then
            -- disable for .env files
              return false
              end
              return true
              end,
      },
      suggestion = {
        enabled = true,
        auto_trigger = true,
        keymap = {
          accept = "<M-a>",
          next = "<M-]>",
          prev = "<M-[>",
          dismiss = "<A-r>",
        },
      },
    },
}
